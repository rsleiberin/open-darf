{
  "title": "Operator Vote Schema v1",
  "type": "object",
  "required": ["version", "decision_context", "votes"],
  "properties": {
    "version": { "type": "string", "const": "vote_schema_v1" },
    "decision_context": {
      "type": "object",
      "required": ["id", "description"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "tags": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "votes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["principle", "decision", "rationale"],
        "properties": {
          "principle": { "type": "string", "minLength": 1 },
          "decision": { "type": "string", "enum": ["ALLOW","DENY","PENDING"] },
          "weight": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "rationale": { "type": "string", "minLength": 1 },
          "dependencies": { "type": "array", "items": { "type": "string" } },
          "interactions": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
