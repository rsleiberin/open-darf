#!/usr/bin/env bash
set -euo pipefail
cmd="${1:-help}"; shift || true
case "$cmd" in
  ingest)   exec python -m apps.transform.ingest "$@" ;;
  show)     exec python -m apps.transform.show "$@" ;;
  validate) exec python -m apps.validator.validator "$@" ;;
  *)
    echo "Usage: smg {ingest|show|validate} [--args...]"
    exit 2
  ;;
esac
