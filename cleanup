#!/usr/bin/env bash
set -euo pipefail
echo "==="
echo "==="
echo "==="
ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# Preflight if present
if [ -x "${ROOT}/scripts/internal/preflight_public.sh" ]; then
  "${ROOT}/scripts/internal/preflight_public.sh" || true
fi
exec "${ROOT}/scripts/kill_switch.sh" "$@"
