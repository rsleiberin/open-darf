# DARF Project Configuration Template
# Copy to .env and configure for your environment
# This consolidates all service configurations for the DARF constitutional AI system

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/darf
POSTGRES_USER=darf
POSTGRES_PASSWORD=change_me
POSTGRES_DB=darf

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=anchors
QDRANT_API_KEY=

# =============================================================================
# OBJECT STORAGE (MinIO)
# =============================================================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=anchors
MINIO_BUCKET_REPORTS=darf-reports
# Convenience for mc CLI
MC_HOST_local=http://minioadmin:minioadmin@localhost:9000

# =============================================================================
# GRAPH DATABASE (Neo4j)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_URL=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_me

# =============================================================================
# CACHE (Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI/ML SERVICES
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
ENV_NAME=development

