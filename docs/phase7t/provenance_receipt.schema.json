{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Provenance Receipt v1",
  "type": "object",
  "required": ["schema_version", "timestamp_utc", "provenance", "links", "status"],
  "properties": {
    "schema_version": { "const": 1 },
    "phase": { "type": "string" },
    "action": { "type": "string" },
    "timestamp_utc": { "type": "string", "pattern": "^[0-9]{8}T[0-9]{6}Z$" },
    "host": { "type": "object" },
    "provenance": {
      "type": "object",
      "required": ["algorithm", "canonicalization"],
      "properties": {
        "algorithm": { "enum": ["sha256"] },
        "canonicalization": { "enum": ["utf8+lf+trim-trailing", "none"] },
        "manifest_path": { "type": "string" },
        "manifest_sha256": { "type": "string" }
      },
      "additionalProperties": true
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["rel"],
        "properties": {
          "rel": { "type": "string" },
          "path": { "type": "string" },
          "cmd": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "status": { "enum": ["ok", "warn", "fail"] },
    "reason": { "type": "string" },
    "details": { "type": "object" }
  },
  "additionalProperties": true
}
