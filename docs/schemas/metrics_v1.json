{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DARF Metrics v1",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "dataset": { "type": "string" },
    "split": { "type": "string" },
    "model": { "type": "string" },

    "precision_micro": { "type": "number" },
    "recall_micro": { "type": "number" },
    "f1_micro": { "type": "number" },
    "f1_unlabeled": { "type": "number" },

    "pred_count": { "type": "integer", "minimum": 0 },
    "gold_pairs": { "type": "integer", "minimum": 0 },

    "latency_ms": { "type": "number", "minimum": 0 },

    "gpu_mem_mb": { "type": "number" },

    "constitutional_compliance_rate": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": [
    "dataset",
    "split",
    "model",
    "precision_micro",
    "recall_micro",
    "f1_micro",
    "f1_unlabeled",
    "pred_count",
    "gold_pairs",
    "latency_ms"
  ]
}
