#!/usr/bin/env bash
# Open-DARF Installation Entry Point
# Delegates to scripts/core/install.sh

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Run preflight checks if available
if [ -x "$SCRIPT_DIR/scripts/internal/preflight_public.sh" ]; then
    echo "Running preflight checks..."
    "$SCRIPT_DIR/scripts/internal/preflight_public.sh" || true
fi

# Execute core installation
exec "$SCRIPT_DIR/scripts/core/install.sh" "$@"
